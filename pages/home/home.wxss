.container {
  padding: 20rpx;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 120rpx;
}

.message-list {
  display: flex;
  flex-direction: column;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.message-item.ai {
  justify-content: flex-start;
}

.message-item.user {
  justify-content: flex-end;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.message-item.user .avatar {
  background-color: #07c160;
}

.message-content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 20rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

.message-content text {
  display: block;
  width: 100%;
  line-height: 1.6;
}

.message-item.ai .message-content {
  background-color: white;
}

.message-item.user .message-content {
  background-color: #07c160;
  color: white;
}

.input-area {
  padding: 20rpx 20rpx 0 20rpx;
  background-color: white;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding-bottom: calc(env(safe-area-inset-bottom) + constant(safe-area-inset-bottom));
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: flex-start;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 10rpx;
  min-height: 100rpx;
  box-sizing: border-box;
}

.message-input {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 20rpx 90rpx 20rpx 30rpx;
  font-size: 32rpx;
  background: transparent;
  width: 100%;
  line-height: 40rpx;
  box-sizing: border-box;
}

.send-btn {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx !important;   
  height: 60rpx !important;  
  padding: 0;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.send-btn[disabled] {
  opacity: 0.5;
}

.send-btn::after {
  border: none;
}

.send-icon {
  width: 60rpx !important;   
  height: 60rpx !important;   
}

/* 加载动画样式 */
.loading {
  min-width: 100rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-dots {
  display: flex;
  align-items: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #1296db;
  margin: 0 6rpx;
  animation: dot-flashing 1s infinite linear alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-flashing {
  0% {
    opacity: 0.2;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 修改新建对话按钮样式 */
.new-chat-btn {
  position: fixed;
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  right: 30rpx;
  background: #1296db;
  color: white;
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.2);
  z-index: 100;
}

.plus-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.new-chat-btn text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 个体选择器按钮样式 */
.profile-selector-btn {
    background: #fff;
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.profile-info {
    display: flex;
    align-items: center;
    gap: 10rpx;
}

.profile-icon {
    width: 40rpx;
    height: 40rpx;
}

.arrow-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: auto;
}

/* 个体选择器弹窗样式 */
.profile-selector-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
}

.modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.selector-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    background: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    max-height: 70vh;
    display: flex;
    flex-direction: column;
}

.selector-header {
    font-size: 32rpx;
    font-weight: bold;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.profiles-list {
    flex: 1;
    overflow-y: auto;
}

.profile-item {
    padding: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.profile-item.selected {
    background: #e6f4ff;
}

.profile-name {
    font-size: 28rpx;
    font-weight: bold;
    display: block;
}

.profile-detail {
    font-size: 24rpx;
    color: #666;
    margin-top: 8rpx;
    display: block;
}

.empty-tip {
    text-align: center;
    color: #999;
    padding: 40rpx 0;
}