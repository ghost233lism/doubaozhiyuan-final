.container {
  padding: 0 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}

.school-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  object-fit: contain;
}

.school-title {
  flex: 1;
}

.school-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.school-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.section {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.level-info {
  color: #666;
  line-height: 1.6;
}

.description {
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

.info-list {
  color: #666;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.label {
  color: #999;
  width: 180rpx;
}

.features-list {
  color: #666;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
  padding: 8rpx 0;
}

.dot {
  margin-right: 10rpx;
  color: #333;
}

.majors-list {
  display: flex;
  flex-wrap: wrap;
}

.major-item {
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
}

.major-item:last-child {
  border-bottom: none;
}

.major-item:active {
  background: #f5f5f5;
}

.link {
  color: #1296db;
  text-decoration: underline;
}

.value {
  flex: 1;
}

.tab-bar {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
  position: relative;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background: #1296db;
}

.school-detail {
  padding-top: 90rpx;
}

.major-container {
  display: flex;
  height: calc(100vh - 100rpx);
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 90rpx;
}

.category-list {
  width: 200rpx;
  border-right: 1rpx solid #eee;
  overflow-y: auto;
  flex-shrink: 0;
}

.category-item {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
  text-align: center;
  position: relative;
}

.category-item.active {
  background: #fff;
  color: #1296db;
  font-weight: bold;
  position: relative;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: #1296db;
}

.major-content {
  flex: 1;
  overflow-y: auto;
  padding: 0;
  width: 0;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 40rpx;
}

.back-button {
  font-size: 28rpx;
  color: #1296db;
  margin-bottom: 20rpx;
  display: block;
}

.major-list {
  background: #fafafa;
  padding: 0 20rpx 0 40rpx;
}

.content-area {
  position: relative;
  height: 100%;
}

.subcategory-group {
  border-bottom: 1rpx solid #eee;
}

.subcategory-item {
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.subcategory-item.active {
  color: #1296db;
  font-weight: bold;
}

.subcategory-item.active::after {
  content: '';
  position: absolute;
  right: 20rpx;
  top: 50%;
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid #1296db;
  border-bottom: 2rpx solid #1296db;
  transform: translateY(-50%) rotate(45deg);
}

.major-detail {
  padding: 30rpx;
  height: 100%;
  overflow-y: auto;
  background: #fff;
}

.major-header {
  margin-bottom: 40rpx;
}

.back-button {
  display: inline-block;
  font-size: 28rpx;
  color: #1296db;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.major-title {
  margin-bottom: 20rpx;
}

.major-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.major-code {
  font-size: 26rpx;
  color: #666;
}

.major-content-detail {
  padding-bottom: 40rpx;
}

.major-section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.icon {
  margin-right: 10rpx;
  font-size: 36rpx;
}

.section-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.features-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.feature-tag {
  padding: 12rpx 24rpx;
  background: #f5f9ff;
  color: #1296db;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.course-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.course-item {
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  flex: 1;
  min-width: 200rpx;
  text-align: center;
} 