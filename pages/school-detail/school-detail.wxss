.container {
  padding: 0 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
}

.school-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  object-fit: contain;
}

.school-title {
  flex: 1;
}

.school-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.school-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.section {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.level-info {
  color: #666;
  line-height: 1.6;
}

.description {
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

.info-list {
  color: #666;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.label {
  color: #999;
  width: 180rpx;
}

.features-list {
  color: #666;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
  padding: 8rpx 0;
}

.dot {
  margin-right: 10rpx;
  color: #333;
}

.majors-list {
  display: flex;
  flex-wrap: wrap;
}

.major-item {
  background: #f5f5f5;
  color: #666;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  transition: all 0.3s;
}

.major-item:active {
  background: #e0e0e0;
}

.link {
  color: #1296db;
  text-decoration: underline;
}

.value {
  flex: 1;
} 