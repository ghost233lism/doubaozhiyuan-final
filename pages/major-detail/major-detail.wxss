/* pages/major-detail/major-detail.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
  position: relative;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.major-detail {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 0 30rpx;
}

/* 头部样式 */
.header {
  background: #fff;
  padding: 40rpx 30rpx;
  margin: 0 -30rpx 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.basic-info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.code {
  margin-right: 20rpx;
}

/* 数据网格样式 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

/* 信息卡片样式 */
.info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #1296db;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-item .label {
  color: #666;
  width: 160rpx;
}

.description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  text-align: justify;
}

/* 标签列表样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.tag {
  background: rgba(18, 150, 219, 0.1);
  color: #1296db;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  margin: 8rpx;
}

/* 就业方向列表样式 */
.career-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.career-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.dot {
  color: #1296db;
  margin-right: 8rpx;
  font-weight: bold;
}