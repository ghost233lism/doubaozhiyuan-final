.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.favorites-list {
  padding-bottom: 40rpx;
}

.favorite-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.favorite-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.favorite-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #eee;
}

.action-btn {
  background: transparent;
  border: none;
  padding: 0;
  height: 48rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  color: #666;
  font-size: 24rpx;
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

.favorite-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 100rpx 0;
  font-size: 28rpx;
} 