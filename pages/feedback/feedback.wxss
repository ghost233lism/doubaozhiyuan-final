.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.feedback-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  padding: 16rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.type-item.selected {
  background-color: #e6f3ff;
  color: #1296db;
}

.feedback-input {
  width: 100%;
  height: 300rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.contact-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1296db;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-weight: normal;
  letter-spacing: 2rpx;
}

.submit-btn.disabled {
  background-color: #cccccc;
  color: #ffffff;
  opacity: 0.8;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

button::after {
  border: none;
} 