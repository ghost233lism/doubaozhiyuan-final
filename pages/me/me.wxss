.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: 0;
}

.user-info {
  background-color: white;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 0;
  height: 240rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  padding: 0;
  line-height: normal;
  border: none;
  width: 100%;
  position: relative;
  top: 0;
}

button.avatar-wrapper {
  margin: 0;
  padding: 0;
  height: auto;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  line-height: 1.4;
}

.menu-list {
  background-color: white;
  width: 100%;
  position: absolute;
  top: 240rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  width: 100%;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 36rpx;
  height: 36rpx;
}

.menu-item text {
  font-size: 30rpx;
  color: #333;
}

/* 添加清除缓存图标样式 */
.menu-icon.clear {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
  opacity: 0.9;
}

.history-section {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.chat-history-list {
  padding: 20rpx 0;
}

.chat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.chat-info {
  flex: 1;
}

.chat-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  padding: 20rpx;
}

.delete-btn image {
  width: 32rpx;
  height: 32rpx;
} 