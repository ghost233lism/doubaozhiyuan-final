.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 0;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  background: white;
  padding: 40rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
}

.intro-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.feature-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 0;
}

.feature-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666;
}

.contact-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.contact-item {
  display: flex;
  margin-bottom: 20rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.copyright {
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
  background: white;
}

.copyright text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
} 