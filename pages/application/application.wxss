.province-grid .province-item,
.interests-grid .interest-item {
  /* 删除或注释掉这些旧样式 */
}

/* 测试推荐专业样式 */
.profile-recommendations {
  margin-top: 16rpx;
  border-top: 1px solid #eee;
  padding-top: 16rpx;
}

.recommendation-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.recommendation-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.recommendation-tag {
  font-size: 24rpx;
  color: #67c23a;  /* 改为绿色 */
  background: #f0f9eb;  /* 改为浅绿色背景 */
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 年份选择器样式 */
.year-selector {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.year-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.year-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.year-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.year-item {
  text-align: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  position: relative;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.year-item.selected {
  background: #1296db;
  color: #fff;
  border-color: #1296db;
  font-weight: bold;
}

.year-item.hover {
  opacity: 0.9;
}

/* 添加选科相关的样式 */
.subject-selection {
  margin: 20rpx 0;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.subject-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.subject-item {
  background: #f5f5f5;
  padding: 20rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.subject-item.selected {
  background: #007AFF;
  color: white;
}

.selected-subjects {
  margin-top: 20rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

/* 确保输入框样式统一 */
.input-group {
  margin-bottom: 20rpx;
}

.input-group input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
} 