.container {
  padding: 0;
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.progress-bar {
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
  margin-bottom: 60rpx;
  width: 100%;
}

.progress {
  height: 100%;
  background: #1296db;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.question-container {
  flex: 1;
  padding: 0 30rpx;
  margin-bottom: 180rpx;
  width: 100%;
  box-sizing: border-box;
}

.question-count {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.question-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: 500;
}

.options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
}

.option {
  width: 100%;
  padding: 30rpx;
  border-radius: 12rpx;
  background: #f8f8f8;
  font-size: 30rpx;
  color: #333;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.option.selected {
  background: #e6f3ff;
  color: #1296db;
  border: 2rpx solid #91caff;
  font-weight: 500;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn.prev {
  background: #f5f5f5;
  color: #666;
}

.btn.prev.disabled {
  opacity: 0.5;
  color: #999;
}

.btn.next {
  background: #1296db;
  color: #fff;
} 